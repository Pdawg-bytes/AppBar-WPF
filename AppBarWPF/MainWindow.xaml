<Window x:Class="AppBarWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppBarWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="88" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="CreateAppBar" Content="Create AppBar" Height="30" Width="100" Click="CreateAppBar_Click" Margin="0,0,5,0"/>
            <Button x:Name="DeregAppBar" Content="Deregister AppBar" Height="30" Width="100" Click="DeregAppBar_Click"/>
        </StackPanel>
    </Grid>
</Window>
